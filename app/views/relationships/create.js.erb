<% if @relationship.errors.any? %>
  $(".flash").html("<%= j render 'layouts/flash' %>");
<% else %>
  $(".relationship-action").html("<%= j render 'relationships/unfollow', relationship: @relationship %>")
  var following_number = parseInt($(".follower-number").text()) + 1;
  $(".follower-number").html(following_number);
  $(".follower-list").prepend("<%= j render 'profiles/user_media', user: current_user %>")
<% end %>
