<div class="row post-managers" id="search-jobs">
  <div class="col-md-11 col-md-offset-1">
    <div class="post-list white-bg row">
      <div class="col-md-3">
        <%= text_field_tag :name, nil, placeholder: t("search.placeholder.name"), class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= select_tag :job_type_ids, options_for_select(
          JobType.all.map{|u| [u.name, u.id]}), {id: "job-type-post",
          multiple: true, include_blank: t("search.placeholder.job_type")} %></td>
      </div>
      <div class="col-md-3">
        <%= text_field_tag :location, nil, placeholder: t("search.placeholder.location"), class: "form-control" %>
      </div>
      <div class="salary-input col-md-3">
        <div class="input-group">
          <%= number_field_tag :min_salary, "", class: "form-control",
            placeholder: t("posts.min_salary") %>
          <span class="input-group-addon"><%= t "posts.to" %></span>
          <%= number_field_tag :max_salary, "", class: "form-control",
            placeholder: t("posts.max_salary") %>
        </div><br />
      </div>

      <div class="col-md-12"><hr></div>
      <div class="col-md-12 user-result">
        <%= render "searches/users" %>
      </div>
    </div>
  </div>
</div>
