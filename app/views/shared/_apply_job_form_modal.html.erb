<%= form_for [@job_post, @apply_job], remote: true do |f| %>
  <div class="modal fade" id="apply-confirm-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-content" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"><%= t "labels.confirm" %></h4>
        </div>
        <div class="modal-body content">
          <%= t("new_feeds.labels.apply_confirm", job: @job_post.name).html_safe %>
          <%= f.hidden_field :job_post_id, value: @job_post.id %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t "actions.close" %>
          </button>
          <%= f.submit t("new_feeds.actions.apply"), class: "btn btn-primary btn-apply" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
