<% like_post = current_user.like_posts.by_activity activity.id %>
<% if like_post.present? %>
   <%= link_to "javascript:void(0)", id: "activity-like-#{activity.id}",
    class: "unlike-post", data: {like_post_id: "#{like_post.first.id}"} do %>
    <i class="fa fa-thumbs-up" aria-hidden="true"></i>
    <%= t "new_feeds.reacts.like" %>
  <% end %>
<% else %>
  <%= link_to "javascript:void(0)", id: "activity-like-#{activity.id}",
    class: "like-post", data: {activity_id: "#{activity.id}"} do %>
    <i class="fa fa-thumbs-up" aria-hidden="true"></i>
    <%= t "new_feeds.reacts.like" %>
  <% end %>
<% end %>
