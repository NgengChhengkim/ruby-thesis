<% save_post = current_user.save_posts.load_save_posts activity.id %>
<% if save_post.present? %>
  <%= link_to t("new_feeds.actions.unsave_post"), "javascript:void(0)",
    class: "unsave-post-action", data: {save_post_id: save_post.first.id} %>
<% else %>
  <%= link_to t("new_feeds.actions.save_post"), "javascript:void(0)",
    class: "save-post-action", data: {activity_id: activity.id} %>
<% end %>
