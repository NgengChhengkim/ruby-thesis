<%= render "profiles/tab", tab_name: "followers", user: user %>
<div class="tab-content">
  <div class="row follower-list">
    <%= render partial: "profiles/follower",
      collection: followers, as: :relationship %>
  </div>
  <div class="load-more">
    <% if followers.next_page %>
      <%= link_to "javascript:void(0)", class: "btn-load-more" do %>
        <%= t "actions.load_more" %>
        <span class="loading" hidden>
          <i class="fa fa-spinner fa-pulse fa-x fa-fw"></i>
          <span class="sr-only"><%= t "labels.loading" %></span>
        </span>
      <% end %>
    <% end %>
    <div hidden><%= render_pagination followers %></div>
  </div>
</div>
