<div id="skills">
  <%= f.fields_for :skills, wrapper: false do |ff| %>
    <div class="fields">
      <table>
        <tr>
          <td><%= ff.label :name %></td>
          <td><%= ff.text_field :name, class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= ff.label :description %></td>
          <td><%= ff.text_area :description, class: "form-control" %></td>
        </tr>
      </table>
      <%= ff.link_to_remove t("profiles.actions.remove") %>
      <hr>
    </div>
  <% end %>
</div>
